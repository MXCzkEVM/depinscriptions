{
  "name": "geoscriptions-monorepo",
  "version": "1.0.0",
  "scripts": {
    "dev:client": "npm -C packages/client run dev",
    "dev:server": "npm -C packages/server run start:dev",
    "preview:client": "npm -C packages/client run build",
    "preview:server": "npm -C packages/server run start:prod",
    "build:client": "npm -C packages/client run build",
    "build:server": "npm -C packages/server run build",
    "build:prisma-generate": "npm -C packages/server run prisma generate",
    "build:prisma-init": "npm -C packages/server run prisma dev",
    "build-preview-server": "npm run build:server && npm run preview:server",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.6",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "react": "^18.2.0"
  }
}
