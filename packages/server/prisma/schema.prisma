// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tick {
  number        Int         @default(autoincrement()) @id
  tick          String      @unique
  minted        Int      @default(0)
  total         Int      @default(0)
  holders       Int      @default(0)
  creator       String
  limit         Int
  deployHash    String      @unique
  deployTime    DateTime
  lastTime      DateTime    @updatedAt
  completedTime DateTime?
  trxs          Int      @default(0)
}

model Hexagon {
  id            Int         @default(autoincrement()) @id
  hex           String      
  tik           String
  mit           Int      @default(0)
}

model Holder {
  id          Int         @default(autoincrement()) @id
  tick        String
  number      Int
  owner       String
  value       Int
}

model Order {
  number    Int       @default(autoincrement()) @id
  hash      String    @unique
  tick      String
  maker     String
  amount    Int
  price     Int
  // 0: listing | 1: sold | 2: cancelled
  status    Int
  time      DateTime    @default(now())
  lastTime  DateTime    @updatedAt
}

model Inscription {
  number      Int       @default(autoincrement()) @id
  hash        String    @unique
  op          String
  tick        String
  json        String
  from        String
  to          String
  time        DateTime  @default(now())
}
